<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="flox.hibernate.HibernatedProcess" table="flox_process">
        <cache usage="read-write"/>
        <id name="id" type="long">
            <generator class="native">
                <param name="sequence">flox_process_sequence</param>
            </generator>
        </id>

        <any id-type="long" name="context">
            <column name="contextObjectClass"/>
            <column name="contextObjectId"/>
        </any>
		
        <property name="processName" type="string"/>

		
		<many-to-one name="currentState" class="flox.model.StateModel"/>

    </class>

</hibernate-mapping>